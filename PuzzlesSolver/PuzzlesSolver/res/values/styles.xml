<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="AnimationPopup">
	    <item name="@android:windowEnterAnimation">@anim/popup_show</item>
	    <item name="@android:windowExitAnimation">@anim/popup_hide</item>
	</style>
    <style name="MainButton" >
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>
    <style name="GameSelector" >
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">3dp</item>
        <item name="android:background">#FFFFFFFF</item>
    </style> 
    <style name="GameSelectorText" >
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/puzzle_button</item>
        <item name="android:clickable">true</item>        
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:padding">5dp</item>
    </style>        
    <style name="ListItem">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>        
    </style>
    <style name="OnBoardButton" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:padding">4dp</item>
    </style>
    <style name="ButtonToolbar" >
        <item name="android:layout_height">40dp</item>
    </style>
    <style name="NoMoreMovesMessage">
        <item name="android:textSize">14sp</item>       
    </style>      
</resources>