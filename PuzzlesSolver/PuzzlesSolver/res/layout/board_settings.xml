<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    		  android:layout_width="fill_parent"
    		  android:layout_height="wrap_content"
    		  android:orientation="vertical"
    		  android:padding="5dp" >
	<LinearLayout android:layout_width="fill_parent"
    		      android:layout_height="wrap_content"
    		      android:orientation="horizontal">
    	<TextView android:layout_width="fill_parent"
        	  	  android:layout_height="wrap_content"
        	  	  android:layout_weight="2"
        	      android:text="@string/board_type" />
	    <Spinner android:id="@+id/board_type_spinner"
	             android:entries="@array/board_types"
	             android:layout_weight="1"
	             android:layout_width="fill_parent"
	             android:layout_height="wrap_content" />
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
    		      android:layout_height="wrap_content"
    		      android:orientation="horizontal">
    	<TextView android:layout_width="fill_parent"
        	  	  android:layout_height="wrap_content"
        	  	  android:layout_weight="2"
        	      android:text="@string/board_size" />
	    <Spinner android:id="@+id/board_size_spinner"
	             android:entries="@array/board_sizes"
	             android:layout_weight="1"
	             android:layout_width="fill_parent"
	             android:layout_height="wrap_content" />
	</LinearLayout>	    	<LinearLayout android:layout_width="fill_parent"
    		      android:layout_height="wrap_content"
    		      android:orientation="horizontal">
    	<TextView android:layout_width="fill_parent"
        	  	  android:layout_height="wrap_content"
        	  	  android:layout_weight="2"
        	      android:text="@string/target_position" />
	    <CheckBox android:id="@+id/target_position_check"
	              android:layout_weight="1"
	              android:layout_width="fill_parent"
	              android:layout_height="wrap_content" />
	</LinearLayout>
   	<LinearLayout android:layout_width="fill_parent"
   		          android:layout_height="wrap_content"
   		          android:orientation="horizontal">
	    <Button android:id="@+id/new_board_ok_button"
	   	  	    android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:layout_margin="10dp"
	   		    android:text="@string/ok" />
	    <Button android:id="@+id/new_board_cancel_button"
	   	  	    android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:layout_margin="10dp"
	   		    android:text="@string/cancel" />
	 </LinearLayout>   		    
</LinearLayout>